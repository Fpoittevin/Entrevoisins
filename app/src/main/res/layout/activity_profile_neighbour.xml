<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.neighbour_profile.ProfileNeighbourActivity">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:id="@+id/activity_profile_neighbour_header">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/arrow_back_white_18dp"
            android:id="@+id/activity_profile_neighbour_back_btn"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_profile_neighbour_avatar_img"
            android:adjustViewBounds="true" android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_profile_neighbour_name_txt"
            android:textColor="#FFF"
            android:textSize="40dp"
            android:layout_gravity="bottom|left"
            android:layout_margin="30dp"/>



    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_white_24dp"
        android:id="@+id/activity_profile_neighbour_favorite_btn"
        app:backgroundTint="@color/lightGray"
        app:borderWidth="0dp"
        app:layout_anchor="@id/activity_profile_neighbour_header"
        app:layout_anchorGravity="bottom|right|end"
        app:elevation="6dp"
        android:layout_margin="15dp"/>

</android.support.design.widget.CoordinatorLayout>